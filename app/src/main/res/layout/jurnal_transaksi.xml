<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rekapitulasi"
        android:id="@+id/rekapLabel"
        android:background="#a20101"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/rekapLabel"
        android:text="Jurnal"
        android:id="@+id/jurnalLabel"
        android:textColor="#000000"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical|center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/jurnalLabel"
        android:layout_gravity="right"
        android:fillViewport="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="18 September 2016"
                android:id="@+id/textView3"
                android:textSize="16sp"
                android:textColor="#4d63d2"
                android:layout_gravity="left"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView2"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pembelian"
                android:id="@+id/textView6"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mie Kuning"
                    android:id="@+id/textView21"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1 kg"
                    android:id="@+id/textView22"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Daging Sapi"
                    android:id="@+id/textView23"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2 kg"
                    android:id="@+id/textView24"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Kerupuk"
                    android:id="@+id/textView25"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="100 buah"
                    android:id="@+id/textView26"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Uang"
                    android:id="@+id/textView27"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Rp500.000"
                    android:id="@+id/textView28"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:gravity="right"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Produksi"
                android:id="@+id/textView7"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bakso"
                    android:id="@+id/textView29"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="60 buah"
                    android:id="@+id/textView30"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Daging Sapi"
                    android:id="@+id/textView31"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1 kg"
                    android:id="@+id/textView32"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:gravity="right"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Penjualan"
                android:id="@+id/textView8"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Uang"
                    android:id="@+id/textView33"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Rp600.000"
                    android:id="@+id/textView34"
                    android:textSize="15sp"
                    android:textColor="#0b9f26"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bakso"
                    android:id="@+id/textView35"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="60 buah"
                    android:id="@+id/textView36"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Kerupuk"
                    android:id="@+id/textView37"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="85 buah"
                    android:id="@+id/textView38"
                    android:textSize="15sp"
                    android:textColor="#c32a2a"
                    android:gravity="right"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:onClick="GeserKiri"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uang"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:typeface="monospace"
                android:id="@+id/nama_barang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.000 rupiah"
                android:textSize="22sp"
                android:textColor="#0b9f26"
                android:layout_gravity="center_horizontal"
                android:typeface="monospace"
                android:id="@+id/nominal_barang" />

        </LinearLayout>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:onClick="GeserKanan"
            android:src="@drawable/next"/>

    </LinearLayout>

</RelativeLayout>