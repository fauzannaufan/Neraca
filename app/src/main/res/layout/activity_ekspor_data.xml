<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.neraca_1.EksporDataActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ekspor Data Transaksi"
        android:id="@+id/eksporLabel"
        android:background="#a20101"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eksporLabel"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Beri nama file laporan"
            android:typeface="serif"
            android:labelFor="@+id/nama_file"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/nama_file"
            android:layout_marginEnd="15dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/saveButton"
            android:text="Ekspor Data"
            android:onClick="EksporData"
            android:background="#0052a5"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
